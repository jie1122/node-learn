{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "allowImportingTsExtensions":true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["**/*.d.ts","src/**/*.ts", "src/**/*.d.ts"],
}
